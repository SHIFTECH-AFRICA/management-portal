<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://clientBrowse.caption"
        focusComponent="clientsTable"
        messagesPack="com.company.managementportal.web.screens.client">
    <data readOnly="true">
        <collection id="clientsDc"
                    class="com.company.managementportal.entity.Client">
            <view extends="_local"/>
            <loader id="clientsDl">
                <query>
                    <![CDATA[select e from managementportal_Client e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="clientsTable"
            spacing="true">
        <filter id="filter"
                applyTo="clientsTable"
                dataLoader="clientsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="clientsTable"
                    width="100%"
                    dataContainer="clientsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="add" type="add"/>
                <action id="excel" type="excel"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
                <column id="company"/>
                <column id="phoneNumber"/>
                <column id="email"/>
                <column id="active"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="clientsTable.create"/>
                <button id="editBtn" action="clientsTable.edit"/>
                <button id="removeBtn" action="clientsTable.remove"/>
                <button id="refreshBtn" action="clientsTable.refresh"/>
                <button id="addBtn" action="clientsTable.add"/>
                <button id="excelBtn" action="clientsTable.excel"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
